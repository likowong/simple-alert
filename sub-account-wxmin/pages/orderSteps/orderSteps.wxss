/* pages/orderSteps/orderSteps.wxss */
.steps-box{
    height: 194rpx;
    padding: 17px 100rpx 0;
    color: #fff;
    background: #00a0e9;
}
.tag{
    position: relative;
    padding-left: 20rpx;
    margin-left: -20rpx;
}
.tag:before{
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    width: 6rpx;
    height: 24rpx;
    transform: translateY(-50%);
    background-color: #00a0e8;
}
.step-input-view{
    padding: 40rpx 0 40rpx 40rpx;
}
.input-box{
    position: relative;
    display: flex;
    height: 120rpx;
    border-bottom: 1px solid #e7ebee;
}
.input-label{
    width: 250rpx;
    font-size: 30rpx;
    padding-top: 15rpx;
    line-height: 105rpx;
}
.font-gray{
    color: #d9dfe3;
}
.input-value{
    width: calc(100% - 170rpx);
    padding: 35rpx 0 25rpx;
}
.input-value input{
    width: 90%;
    height:60rpx;
    line-height:60rpx;
    font-size:30rpx;
}
.select-organize{
    position: relative;
    padding: 15rpx 0 0;
    line-height: 105rpx;
    font-size: 30rpx;
}
.select-organize:after{
    content: '';
    position: absolute;
    right: 30rpx;
    top: 50%;
    -webkit-transform: translateY(-50%);
    transform: translateY(-50%);
    width: 14rpx;
    height: 14rpx;
    border-top: 4rpx solid #d9dfe3;
    border-right: 4rpx solid #d9dfe3;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}
.select-organize text{
    color: #d9dfe3;
}
.select-organize .selected{
    color: #333;
}
.btn-box{
    width: 100%;
    height: 90rpx;
    text-align: center;
    line-height: 90rpx;
    margin-top: 90rpx;
    margin-left: -20rpx;
    font-size: 30rpx;
    border-radius: 45rpx;
    background-color: #eff3f6;
}
.btn-box.active{
    background-color: #00a0e9;
    color: #fff;
}


.price-unit{
    position: absolute;
    right: 20rpx;
    padding-top: 15rpx;
    line-height: 105rpx;
    font-size: 30rpx;
}
.input-period-box{
    height: auto;
    min-height: 120rpx;
}
.period-box{
    display: flex;
    flex-wrap: wrap;
    width: calc(100% - 170rpx);
    padding: 40rpx 30rpx 16rpx 0;
}
.period{
    width: 137rpx;
    height: 53rpx;
    text-align: center;
    line-height: 53rpx;
    border-radius: 25rpx;
    margin-right: 20rpx;
    margin-bottom: 24rpx;
    background-color: #eff3f6;
}
.period:nth-of-type(3),.period:nth-of-type(6){
    margin-right: 0;
}
.period.active{
    color: #fff;
    background-color: #00a0e9;
}
.radio-group{
    line-height: 60rpx;
}
.radio-group radio{
    margin-right: 30rpx;
}

.file-list{
    padding: 46rpx 0;
    border-bottom: 1px solid #e7ebee;
}
.file-list-last{
    padding-bottom: 0;
    border-bottom: none;
}
.file-title{
    margin-bottom: 30rpx;
    font-size: 30rpx;
}
.file-btn-box{
    display: flex;
    flex-wrap: wrap;
}
.file-btn{
    position: relative;
    width: 180rpx;
    height: 180rpx;
    margin: 0 12rpx 12rpx 0;
    text-align: center;
    line-height: 180rpx;
    font-size: 100rpx;
    color: #cbcbcb;
    overflow: hidden;
    border: 1px dashed #eee;
}
.file-btn .add-icon{
    position: absolute;
    left: 50%;
    top: 50%;
    width: 86rpx;
    height: 86rpx;
    margin: -43rpx 0 0 -43rpx;
}
.file-btn .add-icon:before{
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    width: 100%;
    height: 4rpx;
    margin-top: -2rpx;
    background-color: #cbcbcb;
}
.file-btn .add-icon:after{
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    width: 4rpx;
    height: 100%;
    margin-left: -2rpx;
    background-color: #cbcbcb;
}
.file-btn:nth-last-of-type(1){
    margin-right: 0;
}
.file-btn image{
    width: 180rpx;
    height: 180rpx;
}
.delete{
    position: absolute;
    top: 0;
    right: 0;
    color: #fff;
    width: 35rpx;
    height: 35rpx;
    z-index: 2;
    line-height: 32rpx;
    text-align: center;
    background-color:rgba(0,0,0,.3);
    border-bottom-left-radius: 16rpx;
}