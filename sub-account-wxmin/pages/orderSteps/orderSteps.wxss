/* pages/orderSteps/orderSteps.wxss */
.main {
    background-color:#f8f9fc;
}
/* view, text {
    color: #8A878A;
} */
.steps-box{
    height: 194rpx;
    padding: 17px 100rpx 0;
    color: #fff;
    background: #385c80;
}
.tag{
    position: relative;
    padding-left: 20rpx;
    font-size: 34rpx;
    font-weight: bold;
    color: #36587C;
}
.tag:before{
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    width: 5rpx;
    height: 32rpx;
    transform: translateY(-50%);
    background-color: #ff761e;
}
.step-input-view{
    padding: 44rpx;
}
.step-input-view.hide{
    display: none;
}
.owner-info {
    margin: 28rpx 0 58rpx;
    background: #fff;
    padding: 10rpx 24rpx;
}
.input-box{
    position: relative;
    display: flex;
    min-height: 80rpx;
    align-items: center;
    border-bottom: 1px solid #ededed;
}
.input-label{
    font-size: 26rpx;
    color: #373737;
    position: absolute;
}
.input-label.pos-relative {
    position: relative;
}
.font-gray{
    color: #d9dfe3;
}
.input-value{
    flex: 1;
}
.input-value .input-control{
    width: 100%;
    font-size: 26rpx;
    padding-left: 150rpx;
    box-sizing: border-box;
    color: #8A878A;
}
.notice-box {
    height: 100rpx;
}
.notice {
    color: red;
    font-size: 20rpx;
    position: absolute;
    bottom: 4rpx;
    left: 0rpx;
}
.select-organize{
    position: relative;
    font-size: 30rpx;
}
.select-organize:after{
    content: '';
    position: absolute;
    right: 30rpx;
    top: 50%;
    width: 14rpx;
    height: 14rpx;
    border-top: 4rpx solid #d9dfe3;
    border-right: 4rpx solid #d9dfe3;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
    margin-top: -7rpx;
}
.btn-box{
    margin: 58rpx 16rpx 30rpx;
    height: 92rpx;
    text-align: center;
    font-size: 34rpx;
    color: #fff;
    line-height: 92rpx;
    font-size: 34rpx;
    border-radius: 46rpx;
    background-color: #eff3f6;
    -webkit-border-radius: 46rpx;
    -moz-border-radius: 46rpx;
    -ms-border-radius: 46rpx;
    -o-border-radius: 46rpx;
}
.btn-box.active{
    background: linear-gradient(45deg, #62a5d4, #558fbb, #385c80);
    box-shadow: 0 10px 3px -1px #e6eaee;
    color: #fff;
}


.price-unit{
    position: absolute;
    right: 20rpx;
    padding-top: 15rpx;
    line-height: 105rpx;
    font-size: 30rpx;
}
.input-period-box{
    height: auto;
    min-height: 120rpx;
}
.period-box{
    display: flex;
    flex-wrap: wrap;
    width: calc(100% - 170rpx);
    padding: 40rpx 30rpx 16rpx 0;
}
.period{
    width: 137rpx;
    height: 53rpx;
    text-align: center;
    line-height: 53rpx;
    border-radius: 25rpx;
    margin-right: 20rpx;
    margin-bottom: 24rpx;
    background-color: #eff3f6;
}
.period:nth-of-type(3), .period:nth-of-type(6){
    margin-right: 0;
}
.period.active{
    color: #fff;
    background-color: #00a0e9;
}

.file-list{
    padding: 46rpx 0;
    border-bottom: 1px solid #e7ebee;
}
.file-list-last{
    padding-bottom: 0;
    border-bottom: none;
}
.file-title{
    margin-bottom: 30rpx;
    font-size: 26rpx;
}
.file-btn-box{
    display: flex;
    flex-wrap: wrap;
}
.file-btn{
    position: relative;
    width: 180rpx;
    height: 180rpx;
    margin: 0 12rpx 12rpx 0;
    text-align: center;
    line-height: 180rpx;
    font-size: 100rpx;
    color: #cbcbcb;
    overflow: hidden;
    border: 1px dashed #eee;
}
.file-btn .add-icon{
    position: absolute;
    left: 50%;
    top: 50%;
    width: 86rpx;
    height: 86rpx;
    margin: -43rpx 0 0 -43rpx;
}
.file-btn .add-icon:before{
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    width: 100%;
    height: 4rpx;
    margin-top: -2rpx;
    background-color: #cbcbcb;
}
.file-btn .add-icon:after{
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    width: 4rpx;
    height: 100%;
    margin-left: -2rpx;
    background-color: #cbcbcb;
}
.file-btn:nth-last-of-type(1){
    margin-right: 0;
}
.file-btn .file-image{
    width: 180rpx;
    height: 180rpx;
}
.delete{
    position: absolute;
    top: 0;
    right: 0;
    color: #fff;
    width: 35rpx;
    height: 35rpx;
    z-index: 2;
    line-height: 32rpx;
    text-align: center;
    background-color:rgba(0,0,0,.3);
    border-bottom-left-radius: 16rpx;
}
.car-age-box{
    display: flex;
    flex-wrap: wrap;
    position: relative;
    padding: 28rpx 0 50rpx;
}
.carAge{
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    background: #fff;
    color: #8A878A;
    font-size: 26rpx;
    padding: 25rpx;
}
.carAge.active{
    color: #36587C;
    border: 1rpx solid #36587c;
}
.radio-group {
    line-height: 60rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.radio-group .labelview {
    display: inline;
}
.input-value .date-picker {
    width: 90%;
}
.input-value .date-picker .picker {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx;
    padding-left: 270rpx;
    color: #8A878A;
}

.image-list {
    display: flex;
    background: #fff;
    margin-top: 52rpx;
    padding: 20rpx;
    margin-bottom: 30rpx;
}
.image-list .image-item-box {
    flex: 1;
    height: 191rpx;
    position: relative;
}
.image-list .image-item-box:last-child {
    margin-left: 28rpx;
}
.image-list .image-item-box .image-item {
    width: 100%;
    height: 100%;
}
.image-list .image-item-box .image-item-desc {
    color: #8A878A;
    position: absolute;
    font-size: 22rpx;
    bottom: 19rpx;
    width: 100%;
    text-align: center;
}