.tag{
    position: relative;
    padding-left: 20rpx;
    margin-left: -20rpx;
}
.tag:before{
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    width: 6rpx;
    height: 24rpx;
    transform: translateY(-50%);
    background-color: #00a0e8;
}
.tag-two{
