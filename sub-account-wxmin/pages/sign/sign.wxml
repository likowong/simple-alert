<!--pages/login/login.wxml-->
<view class="main" style="min-height:{{winHeight}}px">
    <view class="input-box">
        <view class="input-label">姓名：</view>
        <view class="input-value input-tel">
            <input type="text" bindinput="inputName" value="{{name}}" placeholder="请输入真实姓名" maxlength="16"
                   placeholder-class="font-gray"/>
        </view>
    </view>
    <view class="input-box">
        <view class="input-label">身份证号：</view>
        <view class="input-value">
            <input type="number" bindinput="inputIdCard" value="{{idCard}}" placeholder="请输入真实的身份证号" maxlength="18"
                   placeholder-class="font-gray"/>
        </view>
    </view>
    <view class="input-box">
        <view class="input-label">手机号：</view>
        <view class="input-value">
            <input type="number" bindinput="inputPhoneNum" value="{{phone}}" placeholder="请输入真实的手机号" maxlength="11"
                   placeholder-class="font-gray"/>
        </view>
    </view>
    <view class="login-box">
        <view class="btn-box {{buttonStatus ? 'active' : ''}}" bindtap="{{!buttonClicked?'toSign':''}}">进入签约</view>
    </view>
</view>
