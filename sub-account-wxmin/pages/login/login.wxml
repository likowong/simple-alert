<!--pages/login/login.wxml-->
<view class="main" style="min-height:{{winHeight}}px">
    <view class="input-box">
        <view class="input-label">手机号码：</view>
        <view class="input-value input-tel">
            <input type="number" bindinput="inputPhoneNum" placeholder="请输入手机号码" maxlength="11" placeholder-class="font-gray"/>
            <text class="test-code" wx:if="{{alreadySend}}">{{second}}s</text>
            <text class="test-code {{sendCode ? 'active' : ''}}" bindtap="getCode" wx:else>获取验证码</text>
        </view>
    </view>
    <view class="input-box">
        <view class="input-label">验证码：</view>
        <view class="input-value">
            <input type="number" bindinput="addCode" placeholder="请输入验证码" maxlength="6" placeholder-class="font-gray"/>
        </view>                     
    </view>
    <view class="err-msg" wx:if="{{errorMsg}}">{{errorMsg}}</view>
    <view class="login-box">
        <view class="btn-box {{buttonStatus ? 'active' : ''}}" bindtap="{{!buttonClicked?'submitForm':''}}">登录</view>
    </view>
</view>
