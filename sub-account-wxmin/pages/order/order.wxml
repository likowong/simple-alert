<!--pages/order/order.wxml 提单列表页-->
<view class="main" style="min-height:{{winHeight}}px" >
    <view class="main-header">
        <!-- <image class="order-none" src="../../images/order-none.png"></image> -->
    </view>
    <view class="main-operate">
        <button type="default" bindtap="navigateAddOrder" plain="true" size="mini">发起订单</button>
        <button type="default" plain="true" size="mini">价格设置</button>
        <button type="default" plain="true" size="mini">我的订单</button>
    </view>
    <view class="main-content">
        <view class="main-content-title">最近订单</view>
        <view class="order-list" wx:for="{{4}}" wx:for-item="orderMsg" wx:key="{{orderMsg}}">
            <view class="order-list-item">
                <view class="order-list-item-label">订单号:</view>
                <view class="order-list-item-desc">202002020001</view>
            </view>
            <view class="order-list-item">
                <view class="order-list-item-label">时间:</view>
                <view class="order-list-item-desc">2020.02.03</view>
            </view>
            <view class="order-list-item">
                <view class="order-list-item-label">车主姓名:</view>
                <view class="order-list-item-desc">张三</view>
            </view>
            <view class="order-list-item">
                <view class="order-list-item-label">车架号:</view>
                <view class="order-list-item-desc">2020020200011234567</view>
            </view>
            <view class="order-list-item">
                <view class="order-list-item-label">状态:</view>
                <view class="order-list-item-desc">审核中</view>
            </view>
        </view>
    </view>
</view>
<view class="footer">
    <view class="footer-btn" bindtap="navigateIndex">主页</view>
    <view class="footer-btn" bindtap="navigateMine">我的</view>
</view>

