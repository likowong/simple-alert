<!--pages/order/order.wxml 提单列表页-->
<view class="main" style="min-height:{{winHeight}}px">

    <view class="main-content">
        <view class="order-list-item-label">订单信息:</view>
        <view class="order-list">
            <view bindtap="navigateOrderDetails" data-orderNo="{{orderInfo.ordernum}}">
                <view class="order-list-item">
                    <view class="order-list-item-label">订单号:</view>
                    <view class="order-list-item-desc">{{orderInfo.ordernum}}</view>
                </view>
                <view class="order-list-item">
                    <view class="order-list-item-label">时间:</view>
                    <view class="order-list-item-desc">{{orderInfo.createtime}}</view>
                </view>
                <view class="order-list-item">
                    <view class="order-list-item-label">车主姓名:</view>
                    <view class="order-list-item-desc">{{orderInfo.name}}</view>
                </view>
                <view class="order-list-item">
                    <view class="order-list-item-label">车架号:</view>
                    <view class="order-list-item-desc">{{orderInfo.carframenumber}}</view>
                </view>
                <view class="order-list-item">
                    <view class="order-list-item-label">状态:</view>
                    <view class="order-list-item-desc" wx:if="{{orderInfo.orderstatus == '1'}}">待签约</view>
                    <view class="order-list-item-desc" wx:if="{{orderInfo.orderstatus == '2'}}">待付款</view>
                    <view class="order-list-item-desc" wx:if="{{orderInfo.orderstatus == '3'}}">已付款</view>
                    <view class="order-list-item-desc" wx:if="{{orderInfo.orderstatus == '4'}}">已退款</view>
                </view>
            </view>
        </view>


        <view class="order-list-item-label">购买信息:</view>
        <view class="order-list">
            <view bindtap="navigateOrderDetails" data-orderNo="{{orderInfo.ordernum}}">
                <view class="order-list-item">
                    <view class="order-list-item-label">购买服务:</view>
                    <view class="order-list-item-desc">{{orderInfo.producetype}}</view>
                </view>
                <view class="order-list-item">
                    <view class="order-list-item-label">服务期限 :</view>
                    <view class="order-list-item-desc">{{orderInfo.insuranceperiod}}个月</view>
                </view>
                <view class="order-list-item">
                    <view class="order-list-item-desc">点击查看汽车置换服务协议:</view>
                </view>
                <view wx:if="{{orderInfo.dbxyear != ''}}">
                    <view class="order-list-item">
                        <view class="order-list-item-label">购买服务2:</view>
                        <view class="order-list-item-desc">代步车补偿服务</view>
                    </view>
                    <view class="order-list-item">
                        <view class="order-list-item-label">服务期限 :</view>
                        <view class="order-list-item-desc">{{orderInfo.dbxyear}}个月</view>
                    </view>
                    <view class="order-list-item">
                        <view class="order-list-item-label">点击查看代步车补偿服务协议:</view>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <view wx:if="{{isUser == true}}">
        <view class="footer" wx:if="{{orderInfo.orderstatus == '1'}}">
            <view class="footer-btn" bindtap="navigateToSign" wx:if="{{orderInfo.orderstatus == '1'}}">点击进入签约页面{{orderInfo.dbxyear != ''?'(包含代步险)':''}}</view>
        </view>
    </view>
    <view wx:if="{{isUser == true}}">
        <view class="footer" wx:if="{{orderInfo.orderstatus == '2'}}">
            <view class="footer-btn" bindtap="navigateToPay" wx:if="{{orderInfo.orderstatus == '2'}}">支付费用</view>
        </view>
    </view>
    <view wx:if="{{isUser == false}}">
        <view class="footer">
            <viem class="footer-btn">
                <button open-type="share">点击转发至客户</button>
            </viem>
        </view>
    </view>
</view>

