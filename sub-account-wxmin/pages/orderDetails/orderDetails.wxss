/* pages/orderDetails/orderDetails.wxss */
.main{
    background-color: #eff3f6;
}
.content-account{
    padding: 40rpx 0 40rpx 40rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
}
.account-basic{
    padding-bottom: 40rpx;
    border-bottom: 1px solid #e7ebee;
}
.name-box{
    margin-bottom: 30rpx;
}
.basic-name{
    padding-right: 30rpx;
    font-size: 32rpx;
    font-weight: 600;
    margin-right: 30rpx;
    border-right: 1px solid #cbcfd2;
}
.order-num{
    font-size: 24rpx;
}
.basic-price{
    margin-right: 30rpx;
    font-size: 28rpx;
    font-weight: 600;
    color: #f7440e;
}
.basic-period{
    font-size: 28rpx;
    font-weight: 600;
    color: #f7440e;
}
.account-msg{
    padding-top: 40rpx;
    margin-right: 34rpx;
}
.account-info{
    margin-bottom: 14rpx;
    color: #666;
}
.account-info .font-gray{
    color: #666;
}
.account-help{
    position: relative;
    height: 40rpx;
    line-height: 40rpx;
}
.create-time{
    font-size: 24rpx;
    color: #666;
}
.help-call{
    position: absolute;
    top: 0;
    right: 40rpx;
    display: flex;
    align-items: center;
}
.help-call text{
    color: #00a0e9;
    text-decoration: underline;
}
.call-icon{
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}
.content-car{
    padding-left: 40rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
}
.car-list{
    position: relative;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
}
.car-list:before{
    content: '';
    position: absolute;
    top: 50%;
    right: 40rpx;
    width: 20rpx;
    height: 20rpx;
    border-top: 2px solid #d9dfe3;
    border-right: 2px solid #d9dfe3;
    transform: translateY(-50%) rotate(45deg);
}
.car-list:nth-of-type(1){
    border-bottom: 1px solid #e7ebee;
}
.content-status{
    padding: 30rpx 0 0 40rpx;
    background-color: #fff;
}
.status-top{
    border-bottom: 1px solid #e7ebee;
}
.status-title{
    margin-bottom: 20rpx;
    font-size: 32rpx;
    font-weight: 600;
}
.status-subtitle{
    margin-bottom: 30rpx;
    font-size: 24rpx;
    color: #a4a3a1;
}

.status-list{
    padding-top: 54rpx;
}
.item{
    position: relative;
    padding-left: 74rpx;
}
.item:before{
    content: '';
    position: absolute;
    top: 30rpx;
    left: 20rpx;
    width: 2rpx;
    height: 100%;
    background-color: #ccd0d1;
}
.item:nth-last-of-type(1):before{
    content: '';
    height: 0;
}
.step{
    position: absolute;
    left: 0;
    top: 4rpx;
    width: 40rpx;
    height: 40rpx;
    padding: 16rpx;
    border-radius: 50%;
    background: rgba(255,255,255,0);
}
.step .step-content{
    position: relative;
    width: 12rpx;
    height: 12rpx;
    background-color: #ccd0d1;
    border-radius: 50%;
}
.item-active .step{
    background: #c5edff;
    padding: 6rpx;
}
.item-active .step-content{
    width: 100%;
    height: 100%;
    background-color: #00a0e9;
    border-radius: 50%;
}
.item-title{
    height: 44rpx;
    font-size: 34rpx;
    margin-bottom: 12rpx;
}
.item-subtitle{
    margin-bottom: 30rpx;
}
.item-time{
    color: #96a0a6;
    padding-bottom: 80rpx;
}
.company-phone{
    margin-left: 6rpx;
    color: #f2c920;
}
.code{
    color: #f2c920;
    text-decoration: underline;
}

.expire-date{
    margin-bottom: 10rpx;
}