/* pages/attestDetails/attestDetails.wxss */
.main{
    position: relative;
}
.main-top{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 40rpx;
    background-color: #fbefc0;
}
.attest-status,.attest-status text{
    color: #df6e21;
    font-size: 28rpx;
}
.close {
    position: absolute;
    top: 50%;
    right: 30px;
    width: 1px;
    height: 18px;
    background: #c09c05;
    transform: translateY(-50%) rotate(45deg);
    -webkit-transform: translateY(-50%) rotate(45deg);
}
.close:before {
    content: "";
    position: absolute;
    width: 1px;
    height: 18px;
    left: 0;
    top: 0;
    background: #c09c05;
    transform: rotate(90deg);
    -webkit-transform: rotate(90deg);
}
.main-footer{
    position: absolute;
    bottom: 64rpx;
    left: 50%;
    width: 86%;
    height: 90rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    line-height: 90rpx;
    transform: translateX(-50%);
    border-radius: 45rpx;
    background-color: #00a0e9;
}
.main-footer text{
    font-size: 30rpx;
    color: #fff;
}
.main-footer.review{
    background-color: #7acaf0;
}
.main-footer.review text{
    color: #666;
    font-sizE: 30rpx;
}
.attest-bg{
    width: 100%;
    height: auto;
}
.accept-icon{
    width: 31rpx;
    height: 35rpx;
    margin-right: 14rpx;
}

.tag{
    position: relative;
    padding-left: 20rpx;
    margin-bottom: 40rpx;
    font-weight: 600;
}
.tag:before{
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    width: 6rpx;
    height: 24rpx;
    transform: translateY(-50%);
    background-color: #00a0e8;
}
.content-msg{
    padding: 40rpx 0 0 40rpx;
    background-color: #fff;
}
.content-list{
    padding-bottom: 40rpx;
    margin-bottom: 50rpx;
    border-bottom: 1px solid #e7ebee;
}
.content-list:nth-last-of-type(1){
    border-bottom: none;
}
.list-box{
    padding: 0 40rpx 0 20rpx;
}
.list{
    display: flex;
    justify-content: space-between;
    margin-bottom: 20rpx;
}
.list-title{
    font-size: 28rpx;
    color: #757d82;
    white-space: nowrap;
}
.list-value{
    font-size: 28rpx;
}
.img-big-box{
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: flex-start;
    align-content: flex-start;
    margin-bottom: 30rpx;
}
.img-box{
    position: relative;
    width: 310rpx;
    height: 178rpx;
    margin-right: 10rpx;
    border: 1px solid #eee;
    overflow: hidden;
}
.img-box image {
    width: 310rpx;
    height: 178rpx;
}