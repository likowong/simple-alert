/* pages/applyOrganization/applyOrganization.wxss */
.top-nav{
    display: flex;
    height: 100rpx;
    padding: 20rpx 0 10rpx;
    line-height: 80rpx;
}
.nav{
    flex: 1;
    text-align: center;
}
.nav:nth-of-type(1){
    border-right: 1px solid #eff3f6;
}
.nav.active text{
    position: relative;
    color: #00a0e9;
}
.nav.active text:before{
    content: '';
    position: absolute;
    bottom: 0;
    left: -25%;
    width: 150%;
    height: 4rpx;
    background-color: #00a0e9;
}
.content{
    padding-top: 20rpx;
    background-color: #eff3f6; 
}
.lists-box{
    padding: 0 20rpx;
    background-color: #fff;
}
.list{
    padding-left: 40rpx;
    height: 110rpx;
    line-height: 110rpx;
    border-bottom: 1px solid #e7ebee;
}